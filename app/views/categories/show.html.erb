<div class="page-header">
  <%= link_to categories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_category_path(@category), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show category</h1>
</div>

<dl class="dl-horizontal">
  <dt>Category name:</dt>
  <dd><%= @category.category_name %></dd>

  <dt>Description:</dt>
  <dd><%= @category.description %></dd>

  <dt>Picture:</dt>
  <dd><%=  image_tag @category.picture %></dd>

  <dt>Status:</dt>
  <dd>
    <% if @category.status === true %>
        <p class="status"><b>Status:</b> <span class="green">Available</span></p>
    <% else %>
        <p class="status"><b>Status:</b> <span class="red">Not Available</span></p>
    <% end %>
  </dd>

</dl>
