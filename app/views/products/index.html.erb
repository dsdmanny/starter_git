<div class="bg_color">
  <div class="page-header">
    <%= link_to new_product_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Product
    <% end %>
    <h1 class="white">Products</h1>
  </div>
  <div class="container">
    <div class="center">
     <%= content_tag_for(:tr, @products) do |product| %>
          <div class="thumbnail boxes prodbox">
            <div class="glyphicon_position">
              <%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-remove remove"  %>
            </div>
            <div class="caption">
              <div class="imgbox">
                <%= image_tag product.image %>
              </div>
              <span class="fonth3"><%= product.product_name %></span>
                    <span class="mar5">
                        <%= link_to '', product, :class => "glyphicon glyphicon-info-sign" %>
                    </span>
                    <span class="mar5">
                        <%= link_to '', edit_product_path(product), :class => "glyphicon glyphicon-pencil" %>
                    </span>
              <p><%= product.available_sizes %></p>
              <p><%= product.available_colors %></p>
              <p><%= product.category_id %></p>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>